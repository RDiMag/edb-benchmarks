---
# The following template assumes postgres instances within AWS and
#   have additional attached storage devices based on the pg_instance_type provided
aws:
  cluster_name: pgbench-postgresql
  ssh_user: rocky
  operating_system:
    name: Rocky-8-ec2-8.6-20220515.0.x86_64
    owner: 679593333241
  regions:
    {{ region }}:
      cidr_block: 10.0.0.0/16
      zones:
        {{ zone0 }}: 10.0.0.0/24
      service_ports:
        - port: 22
          protocol: tcp
          description: "SSH"
        - port: 5432
          protocol: tcp
          description: "PostgreSQL"

  machines:
    postgres1:
      tags:
        type: postgres_server
        index: 0
      region: {{ region }}
      zone: {{ zone0 }}
      instance_type: {{ pg_instance_type }}
      volume:
        type: gp2
        size_gb: 50
        iops: 5000
        encrypted: false
